<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F6F6F7"
        android:orientation="vertical">

        <include layout="@layout/nim_include_title_bar_white_message"/>

        <EditText
            android:id="@+id/team_announce_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingVertical="7dp"
            android:paddingHorizontal="13dp"
            android:textSize="14sp"
            android:padding="5dp"
            android:background="#fff"
            android:hint="@string/team_announce_title" />

        <EditText
            android:id="@+id/team_announce_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="7dp"
            android:paddingHorizontal="13dp"
            android:layout_marginTop="25dp"
            android:textSize="14sp"
            android:padding="5dp"
            android:background="#fff"
            android:hint="@string/team_announce_content" />

    </LinearLayout>
</layout>
