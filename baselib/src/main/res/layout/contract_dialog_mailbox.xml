<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:background="@drawable/baselib_bg_colorb5290222"
            android:paddingVertical="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/he_code"
                android:layout_centerVertical="true"
                android:id="@+id/img_doc"
                android:layout_marginLeft="15dp"
                android:layout_width="12dp"
                android:layout_height="12dp" />

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_he"
                android:layout_centerHorizontal="true"
                android:textColor="#000"
                android:text="下载合同"
                android:textSize="@dimen/s_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>
        <View
            android:layout_below="@+id/tv_he"
            android:background="#F4F4F4"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:background="@drawable/baselib_bg_default_pic2"
            android:paddingHorizontal="@dimen/d_14"
            android:paddingTop="@dimen/d_15"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:textColor="@color/gray_99"
                android:padding="10dp"
                android:hint="请输入电子邮箱地址"
                android:id="@+id/ed_mailbox"
                android:background="@drawable/bg_color334b545c_radius8dp"
                android:textSize="@dimen/s_12"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/right_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/s_38"
                android:id="@+id/send_phone"
                android:layout_marginVertical="20dp"
                android:textColor="#666666"
                android:text="输入电子邮箱地址后我们会将电子合同发送至您的邮箱中请注意查收"
                android:textSize="@dimen/s_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginHorizontal="24dp"
                android:id="@+id/tv_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="30dp"
                android:background="@drawable/baselib_bg_color77b529022"
                android:gravity="center"
                android:onClick="doClick"
                android:paddingVertical="10dp"
                android:text="确认"
                android:textColor="#ffffffff"
                android:textSize="@dimen/s_14" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>