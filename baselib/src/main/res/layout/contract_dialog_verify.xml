<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginHorizontal="40dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <LinearLayout
            android:background="@drawable/baselib_bg_colorb529022"
            android:paddingVertical="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="个人信息校验"
                android:textSize="@dimen/s_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:visibility="gone"
                android:lineSpacingExtra="5dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:textColor="@color/white"
                android:text="您在安全签署环境中，即将使用数字证书签署"
                android:textSize="@dimen/s_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/baselib_bg_default_pic2"
            android:paddingHorizontal="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/send_phone"
                android:layout_marginVertical="20dp"
                android:textColor="#666666"
                android:text="点击“获取验证码”后将发送短信验证码至***********"
                android:textSize="@dimen/s_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:textSize="@dimen/s_16"
                    android:id="@+id/ed_code"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/right_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center_horizontal"
                    android:minWidth="80dp"
                    android:background="@drawable/baselib_bg_default_pic3"
                    android:layout_centerVertical="true"
                    android:id="@+id/right_text"
                    android:layout_alignParentRight="true"
                    android:paddingVertical="3dp"
                    android:paddingHorizontal="10dp"
                    android:textColor="#F75349"
                    android:textSize="@dimen/s_12"
                    android:text="获取验证码"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="30dp"
                android:background="@drawable/baselib_bg_color77b529022"
                android:gravity="center"
                android:onClick="doClick"
                android:paddingVertical="10dp"
                android:text="提交"
                android:textColor="#ffffffff"
                android:textSize="@dimen/s_14" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>