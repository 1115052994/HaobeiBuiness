<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

        <variable
            name="item"
            type="com.liemi.basemall.data.entity.order.LogisticEntity.ListBean" />

        <variable
            name="position"
            type="int" />

        <import type="android.view.View" />

    </data>
    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/view_top"
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_logistics_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06-17"
                android:textColor="#ff555555"
                android:textSize="16sp" />
            <TextView
                android:layout_alignRight="@+id/tv_logistics_date"
                android:id="@+id/tv_logistics_time"
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:02"
                android:textColor="#ff888888"
                android:textSize="12sp" />
            <ImageView
                android:id="@+id/iv_icon"
                android:layout_marginLeft="56dp"
                android:src="@mipmap/ic_logistics_step"
                android:layout_width="22dp"
                android:layout_height="22dp" />
            <TextView
                android:id="@+id/tv_logistics_info"
                android:layout_marginLeft="90dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快件在【杭州总集散中心】已装车，准备发往 【杭州下城现代置业大厦营业部】"
                android:textColor="#ff888888"
                android:textSize="12sp" />
            <View
                android:id="@+id/view_line"
                android:background="#CAD5DE"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="66dp"
                android:layout_width="2dp"
                android:layout_height="73dp" />
        </RelativeLayout>
        <View
            android:id="@+id/view_bottom"
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
    </LinearLayout>
</layout>