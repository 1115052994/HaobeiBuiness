<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/gray_F2"
        >

        <include
            layout="@layout/layout_title_shadow"
            />

        <LinearLayout
            android:id="@+id/ll_take_in_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:gravity="center"
            android:onClick="doClick"
            >

            <TextView
                style="@style/textWidthWight1"
                android:text="充值明细"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/gray_4B545C"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_more_black"
                />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_take_out_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:gravity="center"
            android:onClick="doClick"
            >

            <TextView
                style="@style/textWidthWight1"
                android:text="提取明细"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/gray_4B545C"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_more_black"
                />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_buy_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:gravity="center"
            android:onClick="doClick"
            >

            <TextView
                style="@style/textWidthWight1"
                android:text="购买明细"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/gray_4B545C"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_more_black"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_back_money_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:gravity="center"
            android:onClick="doClick"
            >

            <TextView
                style="@style/textWidthWight1"
                android:text="退款明细"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/gray_4B545C"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_more_black"
                />

        </LinearLayout>


    </LinearLayout>

</layout>