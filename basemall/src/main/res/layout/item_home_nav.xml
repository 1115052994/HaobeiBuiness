<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="position"
            type="Integer" />

        <variable
            name="item"
            type="com.liemi.basemall.data.entity.floor.NewFloorEntity.FloorDataBean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingRight="@dimen/d_15"
        android:paddingBottom="8dp">

        <com.netmi.baselibrary.widget.ResizableImageView
            android:id="@+id/iv_floor"
            civPath="@{item.img_url}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@{item.title}"
            android:textColor="#ff1f1f1e"
            android:textSize="12sp" />

    </LinearLayout>

</layout>