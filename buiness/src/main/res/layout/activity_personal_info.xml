<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="idTop"
            type="String" />

        <variable
            name="idBottom"
            type="String" />

        <variable
            name="shopLogo"
            type="String" />

        <variable
            name="shopPic"
            type="String" />

        <variable
            name="environmentPic"
            type="String" />

        <variable
            name="businessPic"
            type="String" />

        <variable
            name="businessTwoPic"
            type="String" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F6F6F7"
        android:orientation="vertical">

        <include layout="@layout/layout_title_shadow" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/et_shop_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    android:hint="请输入店铺名称"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="16dp"
                    android:textColor="#1D1E1F"
                    android:textColorHint="#ffb9b9b9"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/ll_logo_pic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@color/white"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="16dp"
                        android:text="请上传商家logo"
                        android:textColor="#ffb9b9b9"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:id="@+id/rl_logo_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:onClick="doClick">

                        <ImageView
                            android:id="@+id/iv_logo"
                            android:layout_width="40dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="5dp"
                            android:src="@mipmap/ic_uppic" />

                        <com.netmi.baselibrary.widget.RoundImageView
                            android:id="@+id/iv_logo_pic"
                            ivPath="@{shopLogo}"
                            android:layout_width="40dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:scaleType="fitXY"
                            app:riv_corner_radius="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/iv_logo_pic"
                            android:layout_marginTop="6dp"
                            android:text="上传图片"
                            android:textColor="#ffbdbdbd"
                            android:textSize="12sp" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:onClick="doClick"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="16dp"
                        android:layout_marginLeft="20dp"
                        android:text="商家简介"
                        android:textColor="#ff4b545c"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_remark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxEms="10"
                        android:maxLines="1"
                        android:textColor="#ffa9a9a9"
                        android:textSize="14sp"
                        tools:text="这里是商家简介..." />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="20dp"
                        android:src="@mipmap/ic_right_gray" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_time_choose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:onClick="doClick"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="16dp"
                        android:layout_marginLeft="20dp"
                        android:text="营业时间"
                        android:textColor="#ff4b545c"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffa9a9a9"
                        android:textSize="14sp"
                        tools:text="00:00   ～  00:00" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="20dp"
                        android:src="@mipmap/ic_right_gray" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:onClick="doClick"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="16dp"
                        android:layout_marginLeft="20dp"
                        android:text="地理位置"
                        android:textColor="#ff4b545c"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:text="点击选择"
                        android:textColor="#ffa9a9a9"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="20dp"
                        android:src="@mipmap/ic_right_gray" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_shop_pic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@color/white"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="16dp"
                        android:text="请上传门店图片"
                        android:textColor="#ffb9b9b9"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:id="@+id/rl_shop_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:onClick="doClick">

                        <ImageView
                            android:id="@+id/iv_shop"
                            android:layout_width="40dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="5dp"
                            android:src="@mipmap/ic_uppic" />

                        <com.netmi.baselibrary.widget.RoundImageView
                            android:id="@+id/iv_shop_pic"
                            ivPath="@{shopPic}"
                            android:layout_width="40dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:scaleType="fitXY"
                            app:riv_corner_radius="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/iv_shop_pic"
                            android:layout_marginTop="6dp"
                            android:text="上传图片"
                            android:textColor="#ffbdbdbd"
                            android:textSize="12sp" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_environment_pic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@color/white"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="16dp"
                        android:text="请上传店内环境图片"
                        android:textColor="#ffb9b9b9"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:id="@+id/rl_environment_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:onClick="doClick">

                        <ImageView
                            android:id="@+id/iv_environment"
                            android:layout_width="40dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="5dp"
                            android:src="@mipmap/ic_uppic" />

                        <com.netmi.baselibrary.widget.RoundImageView
                            android:id="@+id/iv_environment_pic"
                            ivPath="@{environmentPic}"
                            android:layout_width="40dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:scaleType="fitXY"
                            app:riv_corner_radius="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/iv_environment_pic"
                            android:layout_marginTop="6dp"
                            android:text="上传图片"
                            android:textColor="#ffbdbdbd"
                            android:textSize="12sp" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:onClick="doClick"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="16dp"
                        android:text="选择经营类目" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:text="点击选择"
                        android:textColor="#ffa9a9a9"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="20dp"
                        android:src="@mipmap/ic_right_gray" />
                </LinearLayout>


                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:hint="请输入法人姓名"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="16dp"
                    android:textColor="#1D1E1F"
                    android:textColorHint="#ffb9b9b9"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_id_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:hint="请输入法人身份证号"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="16dp"
                    android:textColor="#1D1E1F"
                    android:textColorHint="#ffb9b9b9"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@color/white"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="16dp"
                        android:text="法人手持身份证照片"
                        android:textColor="#ff010001"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:id="@+id/rlPositive"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_marginHorizontal="20dp"
                        android:background="@drawable/bg_camera"
                        android:onClick="doClick">

                        <TextView
                            android:id="@+id/ivPositive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawableTop="@mipmap/ic_camera"
                            android:drawablePadding="11dp"
                            android:text="正面照示例图片"
                            android:textColor="#ffbdbdbd"
                            android:textSize="12sp" />

                        <com.netmi.baselibrary.widget.RoundImageView
                            android:id="@+id/ivPositiveBg"
                            ivPath="@{idTop}"
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:layout_gravity="center_vertical"
                            android:scaleType="fitXY"
                            app:riv_corner_radius="4dp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="16dp"
                        android:background="#EEEEEE" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingBottom="16dp">

                    <RelativeLayout
                        android:id="@+id/rlNegative"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_marginHorizontal="20dp"
                        android:background="@drawable/bg_camera"
                        android:onClick="doClick">

                        <TextView
                            android:id="@+id/ivNegative"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawableTop="@mipmap/ic_camera"
                            android:drawablePadding="11dp"
                            android:text="反面照示例图片"
                            android:textColor="#ffbdbdbd"
                            android:textSize="12sp" />

                        <com.netmi.baselibrary.widget.RoundImageView
                            android:id="@+id/ivNegativeBg"
                            ivPath="@{idBottom}"
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:layout_gravity="center_vertical"
                            android:scaleType="fitXY"
                            app:riv_corner_radius="4dp" />
                    </RelativeLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@color/white"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="16dp"
                        android:text="请上传营业执照"
                        android:textColor="#ffb9b9b9"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:id="@+id/rl_business_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:onClick="doClick">

                        <ImageView
                            android:id="@+id/iv_business"
                            android:layout_width="40dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="5dp"
                            android:src="@mipmap/ic_uppic" />

                        <com.netmi.baselibrary.widget.RoundImageView
                            android:id="@+id/iv_business_pic"
                            ivPath="@{businessPic}"
                            android:layout_width="40dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:scaleType="fitXY"
                            app:riv_corner_radius="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/iv_business_pic"
                            android:layout_marginTop="6dp"
                            android:text="上传图片"
                            android:textColor="#ffbdbdbd"
                            android:textSize="12sp" />
                    </RelativeLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@color/white"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="16dp"
                        android:text="请上传经营许可证"
                        android:textColor="#ffb9b9b9"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:id="@+id/rl_business_two_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:onClick="doClick">

                        <ImageView
                            android:id="@+id/iv_business_two"
                            android:layout_width="40dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="5dp"
                            android:src="@mipmap/ic_uppic" />

                        <com.netmi.baselibrary.widget.RoundImageView
                            android:id="@+id/iv_business_two_pic"
                            ivPath="@{businessTwoPic}"
                            android:layout_width="40dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:scaleType="fitXY"
                            app:riv_corner_radius="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/iv_business_two_pic"
                            android:layout_marginTop="6dp"
                            android:text="上传图片"
                            android:textColor="#ffbdbdbd"
                            android:textSize="12sp" />
                    </RelativeLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="30dp"
                    android:background="@drawable/baselib_bg_color77b52902"
                    android:gravity="center"
                    android:onClick="doClick"
                    android:paddingVertical="15dp"
                    android:text="提交"
                    android:textColor="#ffffffff"
                    android:textSize="16sp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</layout>