<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <include layout="@layout/layout_title_shadow" />

        <RadioGroup
            android:id="@+id/rgType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_radiobutton"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@mipmap/ic_line_store"
                android:drawableBottom="@drawable/bg_checkbox"
                android:drawablePadding="12dp"
                android:gravity="center"
                android:paddingHorizontal="46dp"
                android:paddingTop="25dp"
                android:paddingBottom="10dp"
                android:text="线上商户"
                android:textColor="#ff333333"
                android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/rb_out_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_radiobutton"
                android:button="@null"
                android:checked="false"
                android:drawableTop="@mipmap/ic_outline_store"
                android:drawableBottom="@drawable/bg_checkbox"
                android:drawablePadding="12dp"
                android:gravity="center"
                android:paddingHorizontal="46dp"
                android:paddingTop="25dp"
                android:paddingBottom="10dp"
                android:text="实体商家"
                android:textColor="#ff333333"
                android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/rb_both"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_radiobutton"
                android:button="@null"
                android:checked="false"
                android:drawableTop="@mipmap/ic_all_store"
                android:drawableBottom="@drawable/bg_checkbox"
                android:drawablePadding="12dp"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:paddingTop="25dp"
                android:paddingBottom="10dp"
                android:text="综合商户"
                android:textColor="#ff333333"
                android:textSize="12sp"
                android:visibility="gone" />
        </RadioGroup>


        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="152dp"
            android:background="#D81E06"
            android:gravity="center"
            android:onClick="doClick"
            android:paddingVertical="12dp"
            android:text="下一步"
            android:textColor="#ffffffff"
            android:textSize="14sp" />
    </LinearLayout>

</layout>