<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="idTop"
            type="String" />

        <variable
            name="handPic"
            type="String" />

        <variable
            name="idBottom"
            type="String" />

        <variable
            name="shopLogo"
            type="String" />

        <variable
            name="shopPic"
            type="String" />


        <variable
            name="environmentPic"
            type="String" />

        <variable
            name="businessPic"
            type="String" />

        <variable
            name="businessTwoPic"
            type="String" />


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F6F6F7"
        android:orientation="vertical">

        <include layout="@layout/layout_title_shadow" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/ll_logo_pic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sobot_bg_title_custom_login">

                    <TextView
                        android:layout_width="@dimen/d_100"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="16dp"
                        android:text="店铺logo"
                        android:textColor="@color/gray_33"
                        android:textSize="@dimen/sp_13" />

                    <RelativeLayout
                        android:id="@+id/rl_logo_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:onClick="doClick">

                        <ImageView
                            android:id="@+id/iv_logo"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="5dp"
                            android:src="@mipmap/ic_uppic_three" />

                        <ImageView
                            android:id="@+id/iv_logo_pic"
                            civPath="@{shopLogo}"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginVertical="5dp"
                            android:layout_marginLeft="5dp"
                            android:scaleType="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/iv_logo_pic"
                            android:layout_marginTop="6dp"
                            android:text="上传图片"
                            android:textColor="#ffbdbdbd"
                            android:textSize="12sp"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginHorizontal="10dp"
                        android:background="#EDEDED" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="@dimen/d_100"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="16dp"
                        android:text="店铺名称"
                        android:textColor="@color/gray_33"
                        android:textSize="@dimen/sp_13" />

                    <EditText
                        android:id="@+id/et_shop_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/sobot_bg_title_custom_login_c4c4c4"
                        android:hint="请输入店铺名称"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="6dp"
                        android:singleLine="true"
                        android:textColor="#333333"
                        android:textColorHint="#c4c4c4"
                        android:textSize="@dimen/s_12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:minHeight="45dp"
                    android:orientation="horizontal"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="@dimen/d_100"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="16dp"
                        android:text="商家简介"
                        android:textColor="@color/gray_33"
                        android:textSize="@dimen/sp_13" />

                    <EditText
                        android:id="@+id/et_merchant_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/sobot_bg_title_custom_login_c4c4c4"
                        android:gravity="top"
                        android:hint="商家简介"
                        android:maxLength="30"
                        android:paddingLeft="20dp"
                        android:paddingTop="6dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/gray_33"
                        android:textColorHint="#c4c4c4"
                        android:textSize="@dimen/sp_12" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="10dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="@dimen/d_100"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="16dp"
                        android:text="店铺标签"
                        android:textColor="@color/gray_33"
                        android:textSize="@dimen/sp_13" />

                    <LinearLayout
                        android:id="@+id/ll_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/sobot_bg_title_custom_login_c4c4c4"
                        android:gravity="center_vertical"
                        android:onClick="doClick"
                        android:singleLine="true">

                        <EditText
                            android:id="@+id/et_shop_biaoqian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="请输入店铺标签"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="6dp"
                            android:textColor="@color/gray_66"
                            android:textColorHint="#ffb9b9b9"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:onClick="doClick"
                    android:orientation="horizontal"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="@dimen/d_100"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="16dp"
                        android:text="经营类目"
                        android:textColor="@color/gray_33"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/sobot_bg_title_custom_login_c4c4c4"
                        android:drawableRight="@mipmap/login_down_icon_three"
                        android:hint="请选择经营类目"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="6dp"
                        android:singleLine="true"
                        android:textColor="#333333"
                        android:textColorHint="#c4c4c4"
                        android:textSize="@dimen/sp_12" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sobot_bg_title_custom_login2"
                    android:orientation="horizontal"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="@dimen/d_100"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="16dp"
                        android:text="服务费比例"
                        android:textColor="@color/gray_33"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_service"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/sobot_bg_title_custom_login_c4c4c4"
                        android:drawableRight="@mipmap/login_down_icon_three"
                        android:hint="请选择服务费比例"
                        android:onClick="doClick"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="6dp"
                        android:singleLine="true"
                        android:textColor="#333333"
                        android:textColorHint="#c4c4c4"
                        android:textSize="@dimen/sp_12" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_time_choose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sobot_bg_title_custom_login2"
                    android:gravity="center_vertical"
                    android:onClick="doClick"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/d_100"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="16dp"
                        android:text="营业时间"
                        android:textColor="@color/gray_33"
                        android:textSize="@dimen/sp_13" />


                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/sobot_bg_title_custom_login_c4c4c4"
                        android:hint="请选择营业时间"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="6dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#333333"
                        android:textColorHint="#c4c4c4"
                        android:textSize="@dimen/sp_12" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="20dp"
                        android:src="@mipmap/ic_right_gray"
                        android:visibility="gone" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sobot_bg_title_custom_login"
                    android:gravity="center_vertical"
                    android:onClick="doClick"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/d_100"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="20dp"
                        android:text="位置信息"
                        android:textColor="@color/gray_33"
                        android:textSize="@dimen/sp_13" />

                    <RelativeLayout
                        android:id="@+id/rl_addres"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/sobot_bg_title_custom_login_c4c4c4"
                        android:paddingHorizontal="10dp">

                        <TextView
                            android:id="@+id/addres_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:lines="2"
                            android:onClick="doClick"
                            android:paddingHorizontal="5dp"
                            android:text=""
                            android:textColor="#333333"
                            android:textSize="12sp" />
                        <!--<ImageView-->
                        <!--android:onClick="doClick"-->
                        <!--android:id="@+id/img_addres_refresh"-->
                        <!--android:layout_marginRight="10dp"-->
                        <!--android:layout_centerVertical="true"-->
                        <!--android:layout_alignParentRight="true"-->
                        <!--android:src="@mipmap/addres_refresh_icon"-->
                        <!--android:layout_width="26dp"-->
                        <!--android:layout_height="24dp" />-->

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:hint="手动填写"
                        android:maxLines="2"
                        android:paddingVertical="3dp"
                        android:paddingRight="10dp"
                        android:textColor="#F75349"
                        android:textSize="@dimen/s_12"
                        android:visibility="invisible" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="20dp"
                        android:src="@mipmap/ic_right_gray"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="运营人信息"
                    android:background="#ffffff"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/gray_33"
                    android:textSize="@dimen/sp_13" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sobot_bg_title_custom_login"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/d_100"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/img_addres_refresh"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="16dp"
                        android:text="姓名"
                        android:textColor="@color/gray_33"
                        android:textSize="@dimen/sp_13" />

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/sobot_bg_title_custom_login_c4c4c4"
                        android:hint="请输入姓名"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="6dp"
                        android:singleLine="true"
                        android:textColor="#333333"
                        android:textColorHint="#c4c4c4"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/d_100"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="16dp"
                        android:text="身份证号码"
                        android:textColor="@color/gray_33"
                        android:textSize="@dimen/sp_13" />

                    <EditText
                        android:id="@+id/et_id_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/sobot_bg_title_custom_login_c4c4c4"
                        android:hint="请输入身份证号"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="6dp"
                        android:singleLine="true"
                        android:textColor="#333333"
                        android:textColorHint="#c4c4c4"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/d_100"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="16dp"
                        android:text="公司名称"
                        android:textColor="@color/gray_33"
                        android:textSize="@dimen/sp_13" />

                    <EditText
                        android:id="@+id/et_id_company_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/sobot_bg_title_custom_login_c4c4c4"
                        android:hint="请输入公司名称"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="6dp"
                        android:singleLine="true"
                        android:textColor="#333333"
                        android:textColorHint="#c4c4c4"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/d_100"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="16dp"
                        android:text="营业执照编号"
                        android:textColor="@color/gray_33"
                        android:textSize="@dimen/sp_13" />

                    <EditText
                        android:id="@+id/et_business_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/sobot_bg_title_custom_login_c4c4c4"
                        android:hint="请输入营业执照编号"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="6dp"
                        android:singleLine="true"
                        android:textColor="#333333"
                        android:textColorHint="#c4c4c4"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginHorizontal="10dp"
                        android:background="#EDEDED" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="16dp"
                    android:text="身份证认证信息"
                    android:textColor="@color/gray_33"
                    android:textSize="@dimen/sp_13" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/rlPositive"
                            android:layout_width="0dp"
                            android:layout_height="160dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_camera"
                            android:onClick="doClick">

                            <TextView
                                android:id="@+id/ivPositive"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:drawableTop="@mipmap/ic_camera"
                                android:drawablePadding="11dp"
                                android:text="正面照示例图片"
                                android:textColor="#ffbdbdbd"
                                android:textSize="12sp" />

                            <com.netmi.baselibrary.widget.RoundImageView
                                android:id="@+id/ivPositiveBg"
                                ivPath="@{idTop}"
                                android:layout_width="match_parent"
                                android:layout_height="160dp"
                                android:layout_gravity="center_vertical"
                                android:scaleType="center"
                                app:riv_corner_radius="4dp" />
                        </RelativeLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="9dp" />

                        <RelativeLayout
                            android:id="@+id/rlNegative"
                            android:layout_width="0dp"
                            android:layout_height="160dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_camera"
                            android:onClick="doClick">

                            <TextView
                                android:id="@+id/ivNegative"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:drawableTop="@mipmap/ic_camera"
                                android:drawablePadding="11dp"
                                android:text="反面照示例图片"
                                android:textColor="#ffbdbdbd"
                                android:textSize="12sp" />

                            <com.netmi.baselibrary.widget.RoundImageView
                                android:id="@+id/ivNegativeBg"
                                ivPath="@{idBottom}"
                                android:layout_width="match_parent"
                                android:layout_height="160dp"
                                android:layout_gravity="center_vertical"
                                android:scaleType="center"
                                app:riv_corner_radius="4dp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:layout_marginTop="9dp"
                        >
                        <RelativeLayout
                            android:id="@+id/rlHand"
                            android:layout_width="0dp"
                            android:layout_height="160dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_camera"
                            android:onClick="doClick">

                            <TextView
                                android:id="@+id/ivHand"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:drawableTop="@mipmap/ic_camera"
                                android:drawablePadding="11dp"
                                android:text="手持身份证"
                                android:textColor="#ffbdbdbd"
                                android:textSize="12sp" />

                            <com.netmi.baselibrary.widget.RoundImageView
                                android:id="@+id/ivHandBg"
                                ivPath="@{handPic}"
                                android:layout_width="match_parent"
                                android:layout_height="160dp"
                                android:layout_gravity="center_vertical"
                                android:scaleType="center"
                                app:riv_corner_radius="4dp" />
                        </RelativeLayout>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="9dp" />
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="160dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_camera"
                            android:onClick="doClick"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:drawablePadding="11dp"
                                android:textColor="#ffbdbdbd"
                                android:textSize="12sp" />

                            <com.netmi.baselibrary.widget.RoundImageView
                                android:layout_width="match_parent"
                                android:layout_height="160dp"
                                android:layout_gravity="center_vertical"
                                android:background="#ffffff"
                                android:scaleType="center"
                                app:riv_corner_radius="4dp" />
                        </RelativeLayout>

                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="16dp"
                    android:text="营业许可证信息"
                    android:textColor="@color/gray_33"
                    android:textSize="@dimen/sp_13" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingHorizontal="10dp">

                    <RelativeLayout
                        android:id="@+id/rl_business_pic"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_camera"
                        android:onClick="doClick">

                        <ImageView
                            android:id="@+id/iv_business"
                            android:layout_width="40dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="5dp"
                            android:src="@mipmap/ic_uppic"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawableTop="@mipmap/ic_camera"
                            android:drawablePadding="11dp"
                            android:text="营业执照"
                            android:textColor="#ffbdbdbd"
                            android:textSize="12sp" />

                        <com.netmi.baselibrary.widget.RoundImageView
                            android:id="@+id/iv_business_pic"
                            ivPath="@{businessPic}"
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:layout_gravity="center_vertical"
                            android:scaleType="center"
                            app:riv_corner_radius="4dp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="9dp" />

                    <RelativeLayout
                        android:id="@+id/rl_business_two_pic"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_camera"
                        android:onClick="doClick">

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_environment_pic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="16dp"
                        android:text="门店环境照片"
                        android:textColor="@color/gray_33"
                        android:textSize="@dimen/sp_13" />

                    <LinearLayout
                        android:id="@+id/ll_shop_pic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:paddingHorizontal="10dp">

                        <RelativeLayout
                            android:id="@+id/rl_shop_pic"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/bg_camera"
                            android:onClick="doClick">

                            <TextView
                                android:id="@+id/iv_shop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:drawableTop="@mipmap/ic_camera"
                                android:textColor="#ffbdbdbd"
                                android:textSize="12sp" />

                            <com.netmi.baselibrary.widget.RoundImageView
                                android:id="@+id/iv_shop_pic"
                                ivPath="@{shopPic}"
                                android:layout_width="match_parent"
                                android:layout_height="160dp"
                                android:layout_gravity="center_vertical"
                                android:scaleType="center"
                                app:riv_corner_radius="4dp" />

                        </RelativeLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="9dp" />

                        <RelativeLayout
                            android:id="@+id/rl_environment_pic"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/bg_camera"
                            android:onClick="doClick">

                            <TextView
                                android:id="@+id/iv_environment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:drawableTop="@mipmap/ic_camera"
                                android:textColor="#ffbdbdbd"
                                android:textSize="12sp" />

                            <com.netmi.baselibrary.widget.RoundImageView
                                android:id="@+id/iv_environment_pic"
                                ivPath="@{environmentPic}"
                                android:layout_width="match_parent"
                                android:layout_height="160dp"
                                android:layout_gravity="center_vertical"
                                android:scaleType="center"
                                app:riv_corner_radius="4dp" />
                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv_confirm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="30dp"
                        android:background="@drawable/baselib_bg_color77b529022"
                        android:gravity="center"
                        android:onClick="doClick"
                        android:paddingVertical="12dp"
                        android:text="确认"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</layout>