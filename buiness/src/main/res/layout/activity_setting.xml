<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F2F2"
        android:orientation="vertical">

        <include layout="@layout/layout_title_shadow" />


        <TextView
            android:id="@+id/tv_pass_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:drawableRight="@mipmap/ic_right_gray"
            android:onClick="doClick"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp"
            android:text="账号安全"
            android:textColor="#ff4b545c"
            android:textSize="14sp" />
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:onClick="doClick"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:text="语音播报"
                android:textColor="#ff4b545c"
                android:textSize="14sp" />
            <com.netmi.baselibrary.widget.SwitchButton
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/switchButton"
                android:layout_width="45dp"
                android:layout_height="25dp"
                app:borderWidth="0.8dp"
                app:offBorderColor="@color/light_gray"
                app:offColor="@color/common_white"
                app:onColor="@color/common_light_blue"
                app:spotColor="@color/common_white"
                app:animate="true"
                />

        </RelativeLayout>
        <TextView
            android:id="@+id/tv_customer_equipment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:drawableRight="@mipmap/ic_right_gray"
            android:onClick="doClick"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp"
            android:text="外部设备"
            android:textColor="#ff4b545c"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_customer_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:drawableRight="@mipmap/ic_right_gray"
            android:onClick="doClick"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp"
            android:text="联系客服"
            android:textColor="#ff4b545c"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:drawableRight="@mipmap/ic_right_gray"
            android:onClick="doClick"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp"
            android:text="意见反馈"
            android:textColor="#ff4b545c"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_secret"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:drawableRight="@mipmap/ic_right_gray"
            android:onClick="doClick"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp"
            android:text="隐私协议"
            android:textColor="#ff4b545c"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_exit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_45"
            android:layout_marginLeft="@dimen/d_25"
            android:layout_marginTop="65dp"
            android:layout_marginRight="@dimen/d_25"
            android:background="#D81E06"
            android:gravity="center"
            android:onClick="doClick"
            android:text="退出登录"
            android:textColor="@color/white"
            android:textSize="@dimen/s_14" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_service_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="doClick"
                android:paddingVertical="18dp"
                android:text="《服务条款》"
                android:textColor="#555555" />

            <TextView
                android:id="@+id/tv_secret_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="doClick"
                android:paddingVertical="18dp"
                android:paddingRight="26dp"
                android:text=" 《隐私协议》"
                android:textColor="#555555"
                android:visibility="visible" />
        </LinearLayout>


    </LinearLayout>

</layout>