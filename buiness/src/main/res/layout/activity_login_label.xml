<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data></data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/layout_title_shadow" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/login_edit_three"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/biaoqian_xianshi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="火锅，自助餐，超市....."
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/tv_delete_biaoqian"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:onClick="doClick"
                        android:layout_alignParentRight="true"
                        android:layout_marginHorizontal="3dp"
                        android:background="@mipmap/label_quxiao" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tankuang_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:onClick="doClick"
                android:visibility="gone">

                <!--<include layout="@layout/activity_tankuang_label" />-->

                <LinearLayout
                    android:id="@+id/ll_tankuang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tankuang_title"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="新增标签"
                        android:textColor="#000000"
                        android:textSize="@dimen/s_16" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:background="@drawable/sobot_bg_title_custom_login_c4c4c4"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingVertical="5dp">

                        <EditText
                            android:id="@+id/tankuang_message"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="6dp"
                            android:background="@null"
                            android:hint="请输入关键词：1-4个字符"
                            android:textColor="@color/gray_66"
                            android:textColorHint="#ffb9b9b9"
                            android:textSize="@dimen/s_15" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="35dp"
                        android:layout_marginVertical="10dp"
                        android:alpha="0.5"
                        android:text="例如：火锅，自助餐，超市......"
                        android:textColor="#999999"
                        android:textSize="@dimen/s_12" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="bottom"
                        android:layout_marginHorizontal="20dp"
                        android:gravity="center">

                        <Button
                            android:id="@+id/tankuang_positiveButton"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@mipmap/dl_button_three"
                            android:gravity="center"
                            android:text="@string/ok"
                            android:onClick="doClick"
                            android:textColor="#ffffff" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!--<TextView-->
                <!--android:id="@+id/tv_save_three"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="@dimen/d_45"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:layout_marginLeft="@dimen/d_25"-->
                <!--android:layout_marginTop="30dp"-->
                <!--android:layout_marginRight="@dimen/d_25"-->
                <!--android:layout_marginBottom="10dp"-->
                <!--android:background="@mipmap/dl_button_three"-->
                <!--android:gravity="center"-->
                <!--android:onClick="doClick"-->
                <!--android:text="保存"-->
                <!--android:textColor="@color/white"-->
                <!--android:textSize="@dimen/s_14" />-->

        </RelativeLayout>


    </LinearLayout>

</layout>